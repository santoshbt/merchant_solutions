<div class="col-md-6">
    <div class="well details_panel" style="margin-top:20px;">
        <h2>Log in</h2>

        <%= form_tag(authenticate_path, method: :post, :id => 'auth-form', :authenticity_token => true) do |f| %>               
            <div class="form-group row">
                <div class="col-md-6">
                    <label for="email">Email</label>
                    <input class="form-control" id="email" name="auth[email]" type="text"  autocomplete="off" >
                </div>
            </div>  

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="aount">Password</label>
                    <input class="form-control" id="password" name="auth[password]"  type="password" autocomplete="off">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="subdomain">Subdomain</label>
                    <input class="form-control" id="subdomain" name="auth[subdomain]"  type="text" autocomplete="off">
                </div>
            </div>
            
            <%= submit_tag "Login", class: "btn btn-primary", id: "login" %>              
        <% end %>
    </div>        
</div>